{% extends 'template_mdl.html.twig' %}

{% block head %}{{ parent() }}
    <link rel="stylesheet" href="/assets/plugins/bootstrap-tagsinput-latest/dist/bootstrap-tagsinput.css">
    <link rel="stylesheet" href="http://code.jquery.com/qunit/qunit-git.css">
    <link rel="stylesheet" href="/assets/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.min.css">
{% endblock %}

{% block body %}

    <section class="section--center mdl-grid mdl-grid--no-spacing mdl-shadow--2dp">
        <div class="mdl-card mdl-cell mdl-cell--12-col">
            <form method="post" class="form-horizontal" action="{{ app.url_generator.generate('save_edit_post') }}">
                <div class="mdl-card__supporting-text">

                    <h4>Editar Post</h4>

                    <input type="hidden" name="id" value="{{ post.id }}">
                    <div class="form-group">
                        <label for="titulo" class="col-sm-2 control-label">Titulo</label>
                        <div class="col-sm-10">
                            <input type="text" value="{% if post.titulo is defined %}{{ post.titulo }}{% endif %}"
                                   class="form-control" id="titulo" name="titulo" placeholder="Titulo" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="titulo" class="col-sm-2 control-label">Tags</label>
                        <div class="col-sm-10">
                            <input type="text" value="{% if post.titulo is defined %}{{ post.titulo }}{% endif %}"
                                   class="form-control" name="tags" data-role="tagsinput" placeholder="tags"/>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="descricao" class="col-sm-2 control-label">Descri&ccedil;&atilde;o</label>
                        <div class="col-sm-10">
                            <textarea class="textarea form-control" id="descricao" name="descricao"
                                      placeholder="Descricao" placeholder="Place some text here"
                                      style="width: 100%; height: 300px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; padding: 10px;">{% if post.descricao is defined %}{{ post.descricao }}{% endif %}</textarea>
                        </div>
                    </div>

                </div>
                <div class="mdl-card__actions">
                    <button type="submit" id="confirm" class="mdl-button">Salvar</button>
                </div>
            </form>
        </div>
        <button class="mdl-button mdl-js-button mdl-js-ripple-effect mdl-button--icon" id="btn3-{{ post.id }}">
            <i class="material-icons">more_vert</i>
        </button>
    </section>

{% endblock %}

{% block javascript %}{{ parent() }}

    <script src="/assets/plugins/bootstrap-wysihtml5/bootstrap3-wysihtml5.all.min.js"></script>

    <script>
        $(function () {
            $('.textarea').wysihtml5();
        });
    </script>

{% endblock %}