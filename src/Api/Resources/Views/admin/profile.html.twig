{% extends 'template.html.twig' %}

{% block body %}
    <div class="row">

        <div class="blog-header">
            <h1 class="blog-title">Profile</h1>
            <p class="lead blog-description"></p>
        </div>

        <form method="post" class="form-horizontal" action="{{ app.url_generator.generate('newPost') }}">
            <div class="form-group">
                <label for="titulo" class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="{{ user.nome }}" id="titulo" name="titulo" placeholder="Titulo" required>
                </div>
            </div>

            <div class="form-group">
                <label for="titulo" class="col-sm-2 control-label">E-mail</label>
                <div class="col-sm-10">
                    <input type="email" class="form-control" value="{{ user.email }}" id="titulo" name="titulo" placeholder="Titulo" required>
                </div>
            </div>

            <div class="form-group">
                <label for="titulo" class="col-sm-2 control-label">Cadastro</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" readonly value="{{ user.cadastro|date('d/m/Y H:i:s') }}" id="titulo" name="titulo" placeholder="Titulo" required>
                </div>
            </div>

            <div class="form-group">
                <label for="titulo" class="col-sm-2 control-label">Ativo</label>
                <div class="col-sm-10">
                    <div class="btn-group" data-toggle="buttons">

                            <label class="btn btn-default active">
                                <input type="radio" name="options" id="option1" autocomplete="off" {% if user.ativo == 0 %} checked="checked" {% endif %}> Yes
                            </label>

                            <label class="btn btn-default">
                                <input type="radio" name="options" id="option2" autocomplete="off" {% if user.ativo == 1 %} checked="checked" {% endif %}> No
                            </label>

                    </div>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" id="confirm" class="btn btn-default">Save</button>
                    <a id="add" class="btn btn-link" data-toggle="modal" data-target="#myModal">Mudar Senha</a>
                </div>
            </div>
        </form>

        <!-- Modal -->
        <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
            <div class="modal-dialog modal-sm" role="document">
                <div class="modal-content">
                    <form class="form-horizontal">
                        <div class="modal-header">
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                        aria-hidden="true">&times;</span></button>
                            <h4 class="modal-title" id="myModalLabel">Adicionar Anexos</h4>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label for="titulo" class="col-sm-2 control-label">Senha Atual</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Senha Atual"
                                           required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="titulo" class="col-sm-2 control-label">Nova Senha</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Nova Senha"
                                           required>
                                </div>
                            </div>

                            <div class="form-group">
                                <label for="titulo" class="col-sm-2 control-label">Nova Senha</label>
                                <div class="col-sm-10">
                                    <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Informe Novamente a Nova Senha"
                                           required>
                                </div>
                            </div>

                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                            <button type="button" class="btn btn-primary">Salvar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
{% endblock %}