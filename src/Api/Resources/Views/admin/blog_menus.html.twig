{% extends 'template.html.twig' %}
{% block title %}Editar Menus{% endblock %}
{% block stylesheet %}{% endblock %}

{% block body %}

    <a id="add" class="btn btn-link" data-toggle="modal" data-target="#addMenu"><span class="glyphicon glyphicon-link"></span></a>

    <table class="table table-bordered">
        <caption>Blog Menu</caption>
        <thead>
        <tr>
            <th>#</th>
            <th>Nome</th>
            <th>Desci&ccedil;&atilde;o</th>
            <th>Url</th>
            <th>Icone</th>
            <th>Cadastro</th>
        </tr>
        </thead>
        <tbody>
            {% for menu in menus %}
                <tr {% if menu.ativo == 0 %} class="danger" {% endif %}>
                    <td>
                        <div class="dropdown">
                            <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                <span class="caret"></span>
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                <li><a href="{{ app.url_generator.generate('edit_menu', { id : menu.id }) }}">Editar</a></li>
                                <li><a href="{{ app.url_generator.generate('alterar_suatus_menu', { id : menu.id }) }}">{% if menu.ativo == 0 %}Ativar{% else %}Inativar{% endif %}</a></li>
                                <li role="separator" class="divider"></li>
                                <li><a href="#">Outros</a></li>
                            </ul>
                        </div>
                    </td>
                    <td>{{ menu.nome }}</td>
                    <td>{{ menu.descricao }}</td>
                    <td>{{ menu.url }}</td>
                    <td>{{ menu.icon }}</td>
                    <td>{{ menu.cadastro|date('d/m/Y H:i:s') }}</td>
                </tr>
            {%  endfor %}
        </tbody>
    </table>

    <!-- Modal -->
    <div class="modal fade" id="addMenu" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form class="form-horizontal" method="post" action="{{ app.url_generator.generate('novo_menu') }}">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Novo Menu</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="titulo" class="col-sm-2 control-label">Nome</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome"
                                       required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="titulo" class="col-sm-2 control-label">Descicao</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="descricao" name="descricao" placeholder="Descicao"
                                       required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="titulo" class="col-sm-2 control-label">Url</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="url" name="url" placeholder="Url"
                                       required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="titulo" class="col-sm-2 control-label">Icone</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="icone" name="icone" placeholder="Icone"
                                       required>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                        <button type="submit" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="editMenu" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form class="form-horizontal">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Adicionar Anexos</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="titulo" class="col-sm-2 control-label">Nome</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Titulo"
                                       required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="titulo" class="col-sm-2 control-label">Descicao</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Titulo"
                                       required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="titulo" class="col-sm-2 control-label">Url</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Titulo"
                                       required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="titulo" class="col-sm-2 control-label">Icone</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Titulo"
                                       required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="titulo" class="col-sm-2 control-label">Cadastro</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Titulo"
                                       required>
                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                        <button type="button" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}

