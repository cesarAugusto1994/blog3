{% extends 'template-new.html.twig' %}

{% block title %}Playlist - Musicas{% endblock %}
{% block headerNome %}Playlist - Musicas{% endblock %}

{% block content %}

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

                    {% if app.session.flashbag.has('mensagem') %}
                        {% for alert in app.session.flashbag.get('mensagem') %}
                            <span id="snackbarid" data-toggle="snackbar" data-content="{{ alert }}"></span>
                        {% endfor %}
                    {% endif %}

                    <a href="#" class="button is-success">Adicionar Musicas</a>
                    <a href="{{ path('playlist_play', { id : playlist.id, nome : playlist.nome }) }}" class="button is-danger">Play</a>

                    <hr class="small"/>

                    <figure>
                        {% for musica in musicas %}
                            <figcaption>
                                <p class="title is-3"><a href="/user/praise/{{ musica.id }}-{{ musica.nome|lower|url_encode }}">{{ musica.nome }}</a>
                                    <button class="button is-danger is-outlined is-pulled-right btnplaylist"
                                            data-toggle="modal"
                                            data-playlist="{{ playlist.id }}"
                                            data-anexo="{{ musica.id }}"
                                            data-anexo-nome="{{ musica.nome }}"
                                            data-target="#modal-playlists">
                                        Remover da minha playlist
                                    </button>
                                </p>
                            </figcaption>
                        {% endfor  %}
                    </figure>
                </div>
            </div>
        </div>
    </article>

{% endblock %}

{% block js %}
    <script>

        $(document).ready(function () {

            $(".btnplaylist").click(function (e) {

                e.preventDefault();

                let _this = $(this);
                let playlist = $(this).data('playlist');
                let anexo = $(this).data('anexo');

                alertify.confirm("Deseja remover este arquivo da sua playlist?", function () {

                    block_screen();

                    $(this).addClass('is-loading');

                    $.ajax({
                        type: "POST",
                        url: "/user/playlists/add-playlist",
                        data: {
                            musica: anexo,
                            playlist: playlist
                        },
                        cache: false,
                        success: function (data) {
                            alertify.success(data.mensagem);
                            _this.parent().parent().hide();
                            unblock_screen();
                        },
                        error: function (data) {
                            unblock_screen();
                            console.log(data.mensagem);
                            alertify.error(data.mensagem);
                        }
                    });

                }).setting("labels", {"ok": "Sim", "cancel": "Cancelar"});

            });

            $('.btnARemoveMusica').click(function (e) {

                let musica = $(this).val();
                let grupo = $(this).data('grupo');

                $(this).addClass('is-loading');

                let _this = $(this);

                e.preventDefault();

                $.ajax({
                    type: "POST",
                    url: "/user/grupo/add-repertorio",
                    data: {
                        musica: musica,
                        grupo: grupo
                    },
                    cache: false,
                    success: function (data) {

                        alertify.success(data.mensagem);

                        if (data.bln == 'add') {

                            _this.parent().parent().hide();

                            _this.removeClass('is-success');
                            _this.removeClass('is-loading');
                            _this.addClass('is-danger');
                            _this.text('Remover');

                        } else {

                            _this.parent().parent().hide();

                            _this.removeClass('is-danger');
                            _this.removeClass('is-loading');
                            _this.addClass('is-success');
                            _this.text('Adicionar Ao Repert√≥rio');

                        }

                        unblock_screen();
                    },
                    error: function (data) {
                        unblock_screen();
                        alertify.error(data.mensagem);
                    }
                });
                /*
                 $(this).removeClass('is-success');
                 $(this).removeClass('is-loading');
                 $(this).addClass('is-danger');
                 $(this).text('Remover');
                 */
            })

        })


    </script>
{% endblock %}