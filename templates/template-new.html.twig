{% extends 'base-new.html.twig' %}

{% block title %}{{ app['nome.blog'] }}{% endblock %}

{% block stylesheet %}{% endblock %}

{% block body %}

    <header id="top-bar" class="navbar-fixed-top animated-header">
        <div class="container">
            <div class="navbar-header">
                <!-- responsive nav button -->
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <!-- /responsive nav button -->

                <!-- logo -->
                <div class="navbar-brand">
                    <a href="{% if app['usuario.sessao'].nome %}{{ path('user_index') }}{% else %}{{ path('home') }}{% endif %}"><span style="color: #1e282c;">{{ app['config'].nome }}</span></a>
                </div>
                <!-- /logo -->
            </div>
            <!-- main menu -->
            <nav class="collapse navbar-collapse navbar-right" role="navigation">
                <div class="main-menu">
                    <ul class="nav navbar-nav navbar-right">
                        {% for item in app['menus'] %}
                            {% if is_granted('ROLE_USER') %}
                                <li><a href="{{ path(item.url) }}">{{ item.nome }}</a></li>
                            {% endif %}
                        {% endfor %}

                        {% if is_granted('ROLE_ADMIN') %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Administrador <span
                                            class="caret"></span></a>
                                <div class="dropdown-menu">
                                    <ul>
                                        <li><a href="{{ path('postForm') }}">Novo Post</a></li>
                                        <li><a href="{{ path('grid_posts') }}">Lista Post</a></li>
                                        <li><a href="{{ path('blog') }}">Configura&ccedil;&otilde;es</a></li>
                                        <li><a href="{{ path('usuarios') }}">Usu&aacute;rios</a></li>
                                    </ul>
                                </div>
                            </li>
                        {% endif %}

                        {% if is_granted('ROLE_USER') %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown">Usu&aacute;rio
                                    <small> {{ app['usuario.sessao'].nome }}</small><span
                                            class="caret"></span></a>
                                <div class="dropdown-menu">
                                    <ul>
                                        <li><a href="{{ path('perfil', { user : app['usuario.sessao'].id }) }}">Perfil</a></li>
                                        <li><a href="{{ path('usuario_atividades', { user : app['usuario.sessao'].id }) }}">Atividades</a></li>
                                    </ul>
                                </div>
                            </li>
                            <li><a href="{{ path('pesquisar') }}">Pesquisar</a></li>
                        {% endif %}
                        <li>
                            {% if is_granted('ROLE_USER') %}
                                <a href="{{ path('logout') }}">Sair</a>
                            {% else %}
                                <a href="{{ path('login') }}">Entrar</a>
                            {% endif %}
                        </li>
                    </ul>
                </div>
            </nav>
            <!-- /main nav -->
        </div>
    </header>

    {% block header %}

        <section class="global-page-header">
            <div class="container">
                <div class="row">
                    <div class="col-md-12">
                        <div class="block">
                            <h2>{% block headerNome %}{% endblock %}</h2>
                        </div>
                    </div>
                </div>
            </div>
        </section>

    {% endblock %}

    {% block content %}{% endblock %}

    <footer id="footer">
        <div class="container">
            <div class="col-md-8">
                <p class="copyright">Copyright: <span>2016</span></p>
            </div>
            <div class="col-md-4">
                <!-- Social Media -->
                <ul class="social">
                    <li>
                        <a href="http://wwww.fb.com/themefisher" class="Facebook">
                            <i class="ion-social-facebook"></i>
                        </a>
                    </li>
                    <li>
                        <a href="http://wwww.twitter.com/themefisher" class="Twitter">
                            <i class="ion-social-twitter"></i>
                        </a>
                    </li>
                    <li>
                        <a href="#" class="Linkedin">
                            <i class="ion-social-linkedin"></i>
                        </a>
                    </li>
                    <li>
                        <a href="http://wwww.fb.com/themefisher" class="Google Plus">
                            <i class="ion-social-googleplus"></i>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </footer>
{% endblock %}