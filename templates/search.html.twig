{% extends 'template.html.twig' %}

{% block title %}Perfil{% endblock %}

{% block content %}

    <header class="intro-header" style="background-image: url('{% if app['config'].background is not null %}{{ asset(app['dir.img'] ~ app['config'].background ) }}{% else %}{{ asset(app['background.default']) }}{% endif %}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>Pesquisar</h1>
                        <form method="get" class="form-horizontal" action="{{ path('pesquisar_home') }}"
                              enctype="multipart/form-data">

                            <input type="hidden" name="search_form" value="1">

                            <p class="control has-icon">
                                <input class="input is-large" type="text" autofocus placeholder="..." name="q" required>
                                <i class="fa fa-search"></i>
                            </p>

                            <p class="control is-fullwidth">
                                <button class="button is-danger is-large is-fullwidth" type="submit">Pesquisar</button>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

                {% if musicas|length > 0 or musica_anexos|length > 0 or posts|length > 0%}

                    {% if musicas|length > 0 %}
                        <div class="card" style="width: 100%">
                            <div class="card-content">
                                <h4>Musicas</h4>
                                {% for musica in musicas %}
                                    <div class="media">
                                        <div class="media-body">
                                            <h4 class="media-heading"><a
                                                        href="{{ path('musica_anexos', { musicaId : musica.id }) }}">{% if musica.numero %}{{ musica.numero }}
                                                    - {% endif %}{{ musica.nome }}</a>
                                                <a class="button is-small is-light is-pulled-right"> {{ musica.categoria.nome }}</a>
                                            </h4>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <br>
                    {% endif %}

                    {% if musica_anexos|length > 0 %}
                        <div class="card" style="width: 100%">
                            <div class="card-content">
                                <h4>Arquivos</h4>
                                {% for anexo in musica_anexos %}
                                    <div class="media">
                                        <div class="media-body">
                                            <h4 class="media-heading">
                                                <a href="{{ path('musica_anexos', { musicaId : anexo.musica.id }) }}">{{ anexo.nome }}</a>
                                                <a class="button is-small is-light is-pulled-right">{{ anexo.musica.nome }}</a>
                                            </h4>
                                        </div>
                                    </div>
                                {% endfor %}
                            </div>
                        </div>
                        <br>
                    {% endif %}



                 {% else %}

                     Nenhum registro Encontrado.

                 {% endif %}

                </div>
            </div>
        </div>
    </article>

{% endblock %}

{% block javascript %}

{% endblock %}