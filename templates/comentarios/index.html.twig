{% extends 'template-new.html.twig' %}

{% block title %}Cometários{% endblock %}
{% block headerNome %}Cometários{% endblock %}


{% block content %}

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

                    {% if app.session.flashbag.has('mensagem') %}
                        {% for alert in app.session.flashbag.get('mensagem') %}
                            <span id="snackbarid" data-toggle="snackbar" data-content="{{ alert }}"></span>
                        {% endfor %}
                    {% endif %}

                    <table class="table is-striped">
                        <thead>
                        <tr>
                            <th>ID</th>
                            <th>Usuário</th>
                            <th>Data</th>
                            <th>Comentário</th>
                        </tr>
                        </thead>
                        <tfoot>
                        <tr>
                            <th>ID</th>
                            <th>Usuário</th>
                            <th>Data</th>
                            <th>Comentário</th>
                        </tr>
                        </tfoot>
                        <tbody>
                        {% for comentario in comentarios %}
                            <tr>
                                <td>{{ comentario.id }}</td>
                                <td>{{ comentario.usuario.id }} - {{ comentario.usuario.nome }}</td>
                                <td>{{ comentario.cadastro|date('d/m/Y H:i:s') }}</td>
                                <td>{{ comentario.comentario|raw }}</td>
                            </tr>
                        {% endfor  %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </article>

{% endblock %}