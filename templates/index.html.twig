{% extends "template.html.twig" %}

{% block title %}Home - Blog Grupo{% endblock %}

{% block content %}

    <!-- Page Header -->
    <!-- Set your background image for this header on the line below. -->
    <header class="intro-header" style="background-image: url('{{ asset(app['background.default']) }}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>Grupo</h1>
                        <hr class="small">
                        <span class="subheading">Blog do Grupo</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <!-- Main Content -->
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

                <h3>{% if tag_message is defined %}{{ tag_message }}{% endif %}</h3>
                <h3>{% if author_message is defined %}{{ author_message }}{% endif %}</h3>
                <h3>{% if message is defined %}{{ message }}{% endif %}</h3>

                {% for post in posts %}
                    <div class="post-preview">
                        <a href="{{ path('post', { postId : post.id, postTitulo : post.titulo|slice(0, 45)|replace({'.': '-', ' ' : '-' })|lower }) }}" >
                            <h2 class="post-title">
                                {{ post.titulo }}
                            </h2>
                            <h3 class="post-subtitle">
                                {{ post.conteudo|slice(0, 201)|trim|raw }}
                            </h3>
                        </a>
                        <p class="post-meta">Posted by <a href="{{ path('author', { author : post.usuario.id, name : post.usuario.nome|replace({'.': '-', ' ' : '-' })|lower }) }}">{{ post.usuario.nome }}</a>
                            on {{ post.tempoPostagem }}</p>
                    </div>
                {% else %}
                    <div class="post-preview">
                        <h2 class="post-title">Nenhum Post encontrado.</h2>
                    </div>
                {% endfor %}
                    <ul class="pager">
                        {% if firstPage is defined and firstPage > 0 %}
                            <li class="previous">
                                <a href="{{ path('page', { 'page' : firstPage }) }}">&xlarr; Newer Posts</a>
                            </li>
                        {% endif %}
                        {% if nextPage is defined and nextPage > 0 %}
                            <li class="next">
                                <a href="{{ path('page', { 'page' : nextPage }) }}">Older Posts &xrarr;</a>
                            </li>
                        {% endif %}
                    </ul>
            </div>
        </div>
    </div>
    <hr>

{% endblock %}
