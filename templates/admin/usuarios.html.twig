{% extends 'template-new.html.twig' %}

{% block title %}Usu&aacute;rios{% endblock %}

{% block header %}{{ parent() }}{% endblock %}

{% block headerNome %}Usu&aacute;rios{% endblock %}

{% block content %}

    <section id="works" class="works">
        <div class="container">
            <div class="row">

                {% for alert in app.session.flashbag.get('mensagem') %}
                    <span id="snackbarid" data-toggle="snackbar" data-content="{{ alert }}"></span>
                {% endfor %}

                {% for usuario in usuarios %}
                    <div class="col-md-4 col-lg-4 col-xs-12 col-sm-12">
                        <figure  style="max-width: 300px; min-width: 300px;" class="wow fadeInLeft animated portfolio-item" data-wow-duration="500ms" data-wow-delay="0ms">
                            {% if usuario.avatar is not null %}
                                <div class="img-wrapper">
                                    <img style="width: 100%;" src="{% if usuario.avatar %}{{ asset(app['dir.avatar'] ~ usuario.avatar ) }}{% else %}{{ asset(app['default.card']) }}{% endif %}" class="img-responsive" alt="this is a title" >
                                    <div class="overlay">
                                        <div class="buttons">
                                            <a rel="gallery" class="fancybox" href="{{ path('perfil', { user : usuario.id }) }}">Ir</a>
                                        </div>
                                    </div>
                                </div>
                            {% endif %}
                            <figcaption>
                                <h4>
                                    <a href="{{ path('perfil', { user : usuario.id }) }}">{{ usuario.nome }}</a>
                                    <a class="button is-light is-small is-pulled-right"
                                       href="{{ path('usuario_atividades', { user : usuario.id }) }}">Atividades</a>

                                {% if usuario.id != app['usuario.sessao'].id %}

                                    <a class="button {% if usuario.ativo %} is-danger {% else %} is-success {% endif %} is-inverted is-pulled-right is-small"
                                       href="{{ path('usuario_status', { id : usuario.id }) }}"
                                       style="text-decoration: none">
                                    <span>{% if usuario.ativo %} Inativar {% else %} Ativar {% endif %}</span>
                                    </a>

                                {% endif %}
                                </h4>

                            </figcaption>
                        </figure>
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>

{% endblock %}