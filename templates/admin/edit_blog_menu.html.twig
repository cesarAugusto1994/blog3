{% extends 'template-new.html.twig' %}

{% block body %}
    <div class="row">

        <div class="blog-header">
            <h1 class="blog-title">Editar Menu</h1>
            <p class="lead blog-description"></p>
        </div>

        <form method="post" class="form-horizontal" action="{{ app.url_generator.generate('save_edit_menu') }}">
            <input type="hidden" name="id" value="{{ menu.id }}">
            <div class="form-group">
                <label for="titulo" class="col-sm-2 control-label">Nome</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="{{ menu.nome }}" id="nome" name="nome" placeholder="Nome" required>
                </div>
            </div>

            <div class="form-group">
                <label for="titulo" class="col-sm-2 control-label">Descri&ccedil;&atilde;o</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="{{ menu.descricao }}" id="descricao" name="descricao" placeholder="Descri&ccedil;&atilde;o" required>
                </div>
            </div>

            <div class="form-group">
                <label for="titulo" class="col-sm-2 control-label">Url</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="{{ menu.url }}" id="url" name="url" placeholder="Url" required>
                </div>
            </div>

            <div class="form-group">
                <label for="titulo" class="col-sm-2 control-label">Icone</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" value="{{ menu.icon }}" id="icone" name="icone" placeholder="Icone" required>
                </div>
            </div>

            <div class="form-group">
                <label for="titulo" class="col-sm-2 control-label">Cadastro</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" readonly value="{{ menu.cadastro|date('d/m/Y H:i:s') }}" id="cadastro" disabled name="cadastro" placeholder="Cadastro" required>
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-offset-2 col-sm-10">
                    <button type="submit" id="confirm" class="btn btn-yahoo">Save</button>
                </div>
            </div>
        </form>

    </div>
{% endblock %}