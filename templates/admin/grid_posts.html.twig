{% extends 'template.html.twig' %}

{% block title %}Grid Posts{% endblock %}

{% block stylesheet %}

{% endblock %}

{% block content %}

    <header class="intro-header" style="background-image: url('{% if app['config'].background is not null %}{{ asset(app['dir.img'] ~ app['config'].background ) }}{% else %}{{ asset(app['background.default']) }}{% endif %}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>Grid Posts</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

                    <table class="table table-responsive table-condensed">
                        <caption>Grid Posts</caption>
                        <thead>
                        <tr>
                            <th>#</th>
                            <th>Titulo</th>
                            <th>Autor</th>
                            <th>Criado em</th>
                            <th>Atualizado em</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for post in posts %}
                            <tr {% if post.ativo == 0 %} class="danger" {% endif %}>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-link dropdown-toggle" type="button" id="dropdownMenu1"
                                                data-toggle="dropdown" aria-haspopup="true" aria-expanded="true">
                                            <span class="caret"></span>
                                        </button>
                                        <ul class="dropdown-menu" aria-labelledby="dropdownMenu1">
                                            {% if post.ativo == 1 %}
                                                <li>
                                                    <a href="{{ path('post', { postId : post.id, postTitulo : post.titulo|slice(0, 30)|replace(' ', '-')|lower }) }}">Ir</a>
                                                </li>
                                                <li>
                                                    <a href="{{ path('edit_post', { id : post.id, name : post.titulo|replace({'.': '', ' ' : '+' })|lower }) }}">Editar</a>
                                                </li>
                                            {% endif %}
                                            <li>
                                                <a href="{{ path('status_post', { id : post.id }) }}">{% if post.ativo == 1 %}Inativar{% else %}Ativar{% endif %}
                                                    Publica&ccedil;&atilde;o</a></li>
                                            <li role="separator" class="divider"></li>
                                            <li><a href="#">Apagar</a></li>
                                        </ul>
                                    </div>
                                </td>
                                <td>{{ post.titulo }}</td>
                                <td>
                                    <a href="{{ path('author', { author : post.usuario.id, name : post.usuario.nome|replace(' ', '_')|lower }) }}">{{ post.usuario.nome }}</a>
                                </td>
                                <td>{{ post.cadastro|date('d/m/y H:i:s') }}</td>
                                <td>{{ post.atualizado|date('d/m/y H:i:s') }}</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>

                </div>
            </div>
        </div>
    </article>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form class="form-horizontal">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Adicionar Anexos</h4>
                    </div>
                    <div class="modal-body">
                        <div class="form-group">
                            <label for="titulo" class="col-sm-2 control-label">Titulo</label>
                            <div class="col-sm-10">
                                <input type="text" class="form-control" id="titulo" name="titulo" placeholder="Titulo"
                                       required>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="link" class="col-sm-2 control-label">Link</label>
                            <div class="col-sm-10">
                                <textarea class="form-control" id="link" name="link" placeholder="link"
                                          required></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
                        <button type="button" class="btn btn-primary">Salvar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

{% endblock %}

{% block javascript %}

{% endblock %}