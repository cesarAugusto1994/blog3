{% extends "template.html.twig" %}

{% block title %}Home - {{ app['nome.blog'] }}{% endblock %}

{% block content %}

    <header class="intro-header" style="background-image: url('{% if app['config'].background is not null %}{{ asset(app['dir.img'] ~ app['config'].background ) }}{% else %}{{ asset(app['background.default']) }}{% endif %}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="site-heading">
                        <h1>{{ app['config'].nome }}</h1>
                        <hr class="small">
                        <span class="subheading">{{ app['config'].subtitulo }}</span>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

                <h3>{% if message is defined %}{{ message }}{% endif %}</h3>

                {% for post in posts %}
                    <div class="post-preview">
                        <a href="{{ path('post', { postId : post.id, postTitulo : post.titulo|slice(0, 45)|replace({'.': '-', ' ' : '-' })|lower }) }}" >
                            <h2 class="post-title">
                                {{ post.titulo }}
                            </h2>
                            <h3 class="post-subtitle">
                                {{ post.conteudo|slice(0, 300)|trim|raw }} {% if post.conteudo|length > 300 %}[...]{% endif %}
                            </h3>
                        </a>
                        {% if post.usuario.id is defined %}
                            <p class="post-meta">Posted by <a href="{{ path('author', { author : post.usuario.id, name : post.usuario.nome|replace({'.': '-', ' ' : '-' })|lower }) }}">{{ post.usuario.nome }}</a>
                                &agrave; {{ post.tempoPostagem }}</p>
                        {%  endif %}
                    </div>
                {% else %}
                    <div class="post-preview">
                        <h2 class="post-title">Nenhum Post encontrado.</h2>
                    </div>
                {% endfor %}
                <ul class="pager">
                    {% if firstPage is defined and firstPage > 0 %}
                        <li class="previous">
                            <a href="{{ path('page', { 'page' : firstPage }) }}">&xlarr; Newer Posts</a>
                        </li>
                    {% endif %}
                    {% if nextPage is defined and nextPage > 0 %}
                        <li class="next">
                            <a href="{{ path('page', { 'page' : nextPage }) }}">Older Posts &xrarr;</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </div>
    <hr>

{% endblock %}
