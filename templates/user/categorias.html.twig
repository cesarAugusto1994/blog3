{% extends 'template.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block content %}

    <header class="intro-header" style="background-image: url('{% if app['config'].background is not null %}{{ asset(app['dir.img'] ~ app['config'].background ) }}{% else %}{{ asset(app['background.default']) }}{% endif %}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>{% if colecao.nome %}{{ colecao.nome }}{% else %}Categorias{% endif %}</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    {% if is_granted('ROLE_ADMIN') %}
                        <button data-toggle="modal" data-target="#myModal" class="button is-light is-small addCategoria">Nova Categoria</button>
                        <hr class="small">
                    {% endif %}
                    {% for categoria in categorias %}
                        <div class="media">
                            <!--
                            <div class="media-left media-middle">
                                <a href="#">
                                    <img class="media-object" src="{{ asset(app['default.card']) }}" alt="...">
                                </a>
                            </div>-->
                            <div class="media-body">
                                <h4 class="media-heading"><a href="{{ path('musicas', { categoriaId : categoria.id }) }}">{{ categoria.nome }}</a></h4>
                            </div>
                        </div>
                    {% else %}
                        <p class="lead">Nenhum registro encontrado.</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </article>

    <article>
        <div class="container">
            <div class="row">
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <form class="form-horizontal" method="POST" action="{{ path('save_categoria') }}">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                                aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="myModalLabel">Adicionar Categoria</h4>
                                </div>
                                <div class="modal-body">
                                    <input type="hidden" name="id" id="id">
                                    <p class="control has-icon">
                                        <input class="input" type="text" placeholder="Nome" name="nome" id="nome"
                                               required>
                                        <i class="fa fa-edit"></i>
                                    </p>
                                    <p class="control has-icon">
                                        <select class="input" name="colecao" id="colecao" required>
                                            <option value=""></option>
                                            {% for colecao in colecoes %}
                                                <option value="{{ colecao.id }}">{{ colecao.nome }}</option>
                                            {% endfor %}
                                        </select>
                                        <i class="fa fa-edit"></i>
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <p class="control">
                                        <button class="button is-success" type="submit">
                                            Salvar
                                        </button>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>

{% endblock %}