{% extends 'template.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block content %}

    <header class="intro-header" style="background-image: url('{% if app['config'].background is not null %}{{ asset(app['dir.img'] ~ app['config'].background ) }}{% else %}{{ asset(app['background.default']) }}{% endif %}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>{% if colecao.nome %}{{ colecao.nome }}{% else %}Categorias{% endif %}</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

                    {% for alert in app.session.flashbag.get('mensagem') %}
                        <span id="snackbarid" data-toggle="snackbar" data-content="{{ alert }}"></span>
                    {% endfor %}

                    {% if is_granted('ROLE_ADMIN') %}
                        <button data-toggle="modal" data-target="#myModal" class="button is-light is-small addCategoria">Nova Categoria</button>
                        <hr class="small">
                    {% endif %}
                    {% for categoria in categorias %}
                        <div class="col-lg-4 col-md-5 col-sm-5 col-xs-12">
                            <div class="card">
                                <div class="card-content">
                                    <div class="media">
                                        <div class="media-body">
                                            <h4 class="media-heading"><a
                                                        href="{{ path('musicas', { categoriaId : categoria.id }) }}">{{ categoria.nome }}</a>
                                                {% if is_granted('ROLE_ADMIN') %}
                                                    <a class="button {% if categoria.ativo %} is-danger {% else %} is-success {% endif %} is-inverted is-pulled-right is-small"
                                                       href="{{ path('categoria_status', { id : categoria.id }) }}">{% if categoria.ativo %} Inativar {% else %} Ativar {% endif %}
                                                    </a>
                                                    <a class="button is-white is-pulled-right is-small openMenu"
                                                       data-toggle="modal"
                                                       data-target="#myModal" data-id="{{ categoria.id }}"
                                                       data-nome="{{ categoria.nome }}"
                                                       data-colecao="{{ categoria.colecao.id }}">Editar
                                                    </a>
                                                {% endif %}
                                            </h4>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <br>
                        </div>
                    {% else %}
                        <p class="lead">Nenhum registro encontrado.</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </article>

    <article>
        <div class="container">
            <div class="row">
                <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <form class="form-horizontal" method="POST" action="{{ path('save_categoria') }}">
                                <div class="modal-header">
                                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                                aria-hidden="true">&times;</span></button>
                                    <h4 class="modal-title" id="myModalLabel">Categoria</h4>
                                </div>
                                <div class="modal-body">
                                    <input type="hidden" name="id" id="id">
                                    <p class="control has-icon">
                                        <input class="input" type="text" placeholder="Nome" name="nome" id="nome"
                                               required>
                                        <i class="fa fa-edit"></i>
                                    </p>
                                    <p class="control has-icon">
                                        <select class="input" name="colecao" id="colecao" required>
                                            <option value=""></option>
                                            {% for colecao in colecoes %}
                                                <option value="{{ colecao.id }}">{{ colecao.nome }}</option>
                                            {% endfor %}
                                        </select>
                                        <i class="fa fa-edit"></i>
                                    </p>
                                </div>
                                <div class="modal-footer">
                                    <p class="control">
                                        <button class="button is-success" type="submit">
                                            Salvar
                                        </button>
                                    </p>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>

{% endblock %}

{% block javascript %}{{ parent() }}
    <script>
        $(document).on('click', '.openMenu', function () {
            $('.modal-body #id').val($(this).data('id'));
            $('.modal-body #nome').val($(this).data('nome'));
            $('.modal-body #colecao').val($(this).data('colecao'));
            $('.modal-body #colecao').attr('selected', selected);
        })
    </script>
    <script>
        $(document).on('click', '.addCategoria', function () {
            $('.modal-body #id').val('');
            $('.modal-body #nome').val('');
            $('.modal-body #colecao').val('');
        })
    </script>
{% endblock %}