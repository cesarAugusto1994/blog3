{% extends 'template-new.html.twig' %}

{% block title %}{% if colecao.nome %}{{ colecao.nome }}{% else %}Categorias{% endif %}{% endblock %}

{% block stylesheet %}{{ parent() }}
    <script src="{{ asset(app['dir.base'] ~ 'assets/blog/js/pages/categorias.js') }}"></script>
{% endblock %}

{% block header %}{{ parent() }}{% endblock %}

{% block headerNome %}{% if colecao.nome %}{{ colecao.nome }}{% else %}Categorias{% endif %}{% endblock %}

{% block content %}

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

                    {% if is_granted('ROLE_ADMIN') %}
                        <button data-toggle="modal" data-target="#myModal" class="button is-light is-small addCategoria">Nova Categoria</button>
                        <hr class="small">
                    {% endif %}

                    <div id="categorias" data-source="{{ path('api_categorias', { colecaoId : colecao.id }) }}"
                         data-user="{{ app['usuario'].roles }}"></div>
                    <script src="{{ asset(app['dir.base'] ~ 'assets/build/categorias.js') }}"></script>
{#
