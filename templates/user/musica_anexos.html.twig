{% block headerNome %}{% if musica.numero %}{{ musica.numero }} - {% endif %}{{ musica.nome }}{% endblock %}
{% block headerSubtitulo %}{{ musica.categoria.colecao.nome }} / {{ musica.categoria.nome }}{{ app['nome.blog'] }}{% endblock %}

{% block content %}

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-xs-12">

                    {% for alert in app.session.flashbag.get('mensagem') %}
                        <span id="snackbarid" data-toggle="snackbar" data-content="{{ alert }}"></span>
                    {% endfor %}

                    {% if musica.letra %}
                        <div class="card wow fadeInUp animated slide" data-wow-delay=".3s" style="width: 100%">
                            <div class="card-content">
                                <div class="media">
                                    <div class="media-content">
                                        <div id="fontlinks">
                                            <button id="incfont" class="button is-dark is-outlined is-small buttonfont">
                                                A+
                                            </button>
                                            <button id="decfont" class="button is-dark is-outlined is-small buttonfont">
                                                A-
                                            </button>
                                            {% if musica.usuario.id == app['usuario'].id or is_granted('ROLE_ADMIN') %}
                                                <a href="{{ path('view_editar_letra_musica', { id : musica.id }) }}"
                                                   class="button is-light is-small" style="text-decoration: none">Editar
                                                    Letra</a>
                                            {% endif %}
                                        </div>
                                        <br>
                                        {% if musica.letra %}
                                            <pre id="content" style="background-color: transparent; border: none;"
                                                 data-key="{{ musica.tom }}">{{ musica.letra }}</pre>
                                        {% else %}
                                            <p class="lead">Letra indispon√≠vel.</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div><br>
                    {% endif %}

                    <div id="comentarios" data-source="{{ path('api_comentarios', { musicaId : musica.id }) }}"
                         data-source-arquivos="{{ path('api_anexos', { musicaId : musica.id }) }}"
                         data-user="{{ app['usuario'].roles }}" data-dir-avatar="{{ app['dir.avatar'] }}"
                         data-dir-anexos="{{ app['dir.anexo'] }}"
                         data-musica-id="{{ musica.id }}" data-source-editar="{{ path('view_editar_musica', { id : musica.id }) }}"
                         data-source-add-letra="{{ path('view_editar_letra_musica', { id : musica.id }) }}"
                         data-source-videos="{{ path('videos') }}">
                    </div>
                    <script src="{{ asset(app['dir.base'] ~ 'assets/build/anexos.js') }}"></script>
                </div>
            </div>
        </div>
    </article>

    <div class="modal fade" id="upload" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form id="form-upload">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Upload de Arquivos</h4>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="user_anexos" value="1">
                        <input type="hidden" name="musica" value="{{ musica.id }}">
                        <input class="input" type="file" name="files[]" id="filer_inputs" multiple="multiple">
                    </div>
                    <div class="modal-footer">
                        <p class="control">
                            <button id="btn-upload" class="button is-success" type="submit">
                                Salvar
                            </button>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addLink" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form id="form-add-link" class="form-horizontal">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Adicionar Musica</h4>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="id" id="id">
                        <input type="hidden" name="musica" id="musica" value="{{ musica.id }}">
                        <label>Tipo de Link</label>
                        <p class="control">
                            <select class="input" name="tipo" id="tipo" required>
                                <option value="">Selecione</option>
                                {% for tipo in tipos %}
                                    <option value="{{ tipo.id }}">{{ tipo.nome }}</option>
                                {% endfor %}
                            </select>
                        </p>
                        <label>Link</label>
                        <p class="control">
                            <input class="input" type="text" placeholder="Link" name="link" id="link" required>
                        </p>
                    </div>
                    <div class="modal-footer">
                        <p class="control">
                            <button id="btn-add-link" class="button is-success" type="submit">
                                Salvar
                            </button>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}