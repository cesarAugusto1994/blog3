{% block headerNome %}{% if musica.numero %}{{ musica.numero }} - {% endif %}{{ musica.nome }}{% endblock %}
{% block headerSubtitulo %}{{ musica.categoria.colecao.nome }} / {{ musica.categoria.nome }}{{ app['nome.blog'] }}{% endblock %}

{% block content %}

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-xs-12">

                    {% for alert in app.session.flashbag.get('mensagem') %}
                        <span id="snackbarid" data-toggle="snackbar" data-content="{{ alert }}"></span>
                    {% endfor %}

                    {% if musica.letra %}
                        <div class="card wow fadeInUp animated slide"  data-wow-delay=".6s" style="width: 100%">
                            <div class="card-content">
                                <div class="media">
                                    <div class="media-content">
                                        <div id="fontlinks">
                                            <button id="incfont" class="button is-dark is-outlined is-small buttonfont">A+</button>
                                            <button id="decfont" class="button is-dark is-outlined is-small buttonfont">A-</button>
                                            {% if musica.usuario.id == app['usuario.sessao'].id or is_granted('ROLE_ADMIN') %}
                                                <a href="{{ path('musicas_letra_editar', { id : musica.id }) }}" class="button is-light is-small" style="text-decoration: none">Editar Letra</a>
                                            {% endif %}
                                        </div>
                                        <br>
                                        {% if musica.letra %}
                                            <pre id="content" style="background-color: transparent; border: none;" data-key="{{ musica.tom }}">{{ musica.letra }}</pre>
                                        {% else %}
                                            <p class="lead">Letra indisponível.</p>
                                        {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div><br>
                    {% endif %}
                    <div class="card wow fadeInUp animated slide"  data-wow-delay=".6s" style="width: 100%">
                         <div class="card-content">
                            <div class="media">
                                <div class="media-content">
                                    {% if musica.usuario.id == app['usuario.sessao'].id or is_granted('ROLE_USER') %}
                                        <a href="{{ path('musicas_editar', { id : musica.id }) }}" class="button is-light is-small">Editar</a>
                                        {% if not musica.letra %}
                                            <a href="{{ path('musicas_letra_editar', { id : musica.id }) }}" class="button is-primary is-inverted is-small" style="text-decoration: none">Adicionar Letra</a>
                                        {% endif %}
                                        <button data-toggle="modal" data-target="#addLink" class="button is-success is-inverted is-small addAnexo">Adicionar Link</button>
                                        <button data-toggle="modal" data-target="#upload" class="button is-danger is-inverted is-small">Adicionar Arquivo</button>
                                    {% endif %}
                                    <br>
                                </div>
                            </div>

                            {% for anexo in anexos %}
                                <div class="media wow fadeInUp animated slide"  data-wow-delay=".6s">
                                    <div class="media-left media-middle">
                                        {% if anexo.tipo.id == 1 %}
                                            <i class="fa fa-music"></i>
                                        {% elseif anexo.tipo.id == 2 %}
                                            <i class="fa fa-picture-o"></i>
                                        {% elseif anexo.tipo.id == 3 %}
                                            <i class="fa fa-file-pdf-o"></i>
                                        {% elseif anexo.tipo.id == 4 %}
                                            <i class="fa fa-video-camera"></i>
                                        {% endif %}&nbsp;&nbsp;&nbsp;
                                    </div>
                                    <div class="media-body">
                                        <h4 class="media-heading">{{ anexo.nome }}</h4>
                                        {% if anexo.isExterno %}
                                            <a class="button is-small is-white" href="{{ path('videos')}}"
                                               target="_blank">ir para o link
                                            </a>
                                        {% else %}
                                            <a class="button is-small is-light" href="{{ app['dir.base2'] }}/assets/blog/musicas/{{ anexo.link }}"
                                               target="_blank">Visualizar
                                            </a>
                                            <a class="button is-small is-white" href="{{ app['dir.base2'] }}/assets/blog/musicas/{{ anexo.nome }}"
                                               download>Baixar
                                            </a>
                                        {% endif %}
                                        {% if anexo.usuario.id == app['usuario.sessao'].id or is_granted('ROLE_ADMIN') %}
                                            <a class="button is-danger is-small is-inverted"
                                               href="{{ path('musica_anexos_remover', { id : anexo.id }) }}">Remover
                                            </a>
                                        {% endif %}
                                        {% for tag in anexo.anexoTags.tag %}
                                            <button class="button is-info is-outlined">{{ tag.nome }}</button>
                                        {% endfor %}
                                    </div>
                                </div>
                            {% else %}
                                <p class="lead">Nenhum registro encontrado.</p>
                            {% endfor %}
                                </div>
                    </div><br>
                </div>
            </div>
        </div>
    </article>

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-xs-12">
                    <div class="card wow fadeInUp animated slide" data-wow-delay=".6s" style="width: 100%">
                        <div class="card-content">

                            <p class="title is-3">Comentários</p>

                            <div class="comments">
                                {% for comentario in comentarios %}
                                    <div class="media">
                                        <a class="pull-left">
                                            <img style="min-width: 64px; max-width: 64px; min-height: 64px; max-height: 64px; margin: auto" alt="" src="{% if comentario.usuario.avatar %}{{ asset(app['dir.avatar'] ~ comentario.usuario.avatar ) }}{% else %}{{ asset(app['default.card']) }}{% endif %}" class="media-object">
                                        </a>
                                        <div class="media-body">
                                            <h4 class="media-heading">{{ comentario.usuario.nome }}</h4>
                                            <p class="text-muted">
                                                {{ comentario.cadastro|date('d/m/Y H:i:s') }}
                                            </p>
                                            <p>
                                                {{ comentario.comentario }}
                                            </p>
                                            <!--<a href="">Reply</a>-->
                                        </div>
                                    </div>
                                {% endfor %}
                            </div><br>

                            <div class="post-comment">
                                <form role="form" class="form-horizontal">
                                    <input type="hidden" name="musica_id" id="musica_id" value="{{ musica.id }}">
                                    <div class="form-group">
                                        <div class="col-lg-12">
                                            <textarea class=" form-control" name="comentario" id="comentario" rows="4" required placeholder="Criar Coment&aacute;rio"></textarea>
                                        </div>
                                    </div>
                                    <p>
                                    </p>
                                    <p>
                                        <button class="button is-danger" type="submit">Enviar</button>
                                    </p>
                                    <p></p>
                                </form>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>
    </article>

    <div class="modal fade" id="upload" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form class="wow fadeInUp animated slide" data-wow-delay=".6s" method="post" action="{{ path('musica_anexos_upload', { musicaId : musica.id }) }}"  enctype="multipart/form-data">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Upload de Arquivos</h4>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="user_anexos" value="1">
                        <input type="hidden" name="musica" value="{{ musica.id }}">
                        <input class="input" type="file" name="files[]" id="filer_input" multiple="multiple">
                    </div>
                    <div class="modal-footer">
                        <p class="control">
                            <button class="button is-success" type="submit">
                                Salvar
                            </button>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="modal fade" id="addLink" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form class="form-horizontal" method="POST" action="{{ path('save_musica_anexos', { musicaId : musica.id }) }}">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Adicionar Musica</h4>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="id" id="id">
                        <input type="hidden" name="musica" id="musica" value="{{ musica.id }}">
                        <label>Tipo de Link</label>
                        <p class="control">
                            <select class="input" name="tipo" id="tipo" required>
                                <option value="">Selecione</option>
                                {% for tipo in tipos %}
                                    <option value="{{ tipo.id }}" >{{ tipo.nome }}</option>
                                {% endfor %}
                            </select>
                        </p>
                        <label>Link</label>
                        <p class="control">
                            <input class="input" type="text" placeholder="Link" name="link" id="link" required>
                        </p>
                    </div>
                    <div class="modal-footer">
                        <p class="control">
                            <button class="button is-success" type="submit">
                                Salvar
                            </button>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}