{% extends 'template-new.html.twig' %}

{% block title %}{% endblock %}

{% block header %}{{ parent() }}{% endblock %}

{% block stylesheet %}{{ parent() }}
    <script src="{{ asset(app['dir.base'] ~ 'assets/blog/js/pages/musica_anexos.js') }}"></script>
    <link href="{{ asset(app['dir.base'] ~ 'assets/plugins/jQuery-Chord-Transposer/jquery.transposer.css') }}" rel="stylesheet">
    <link href="{{ asset(app['dir.base'] ~ 'assets/plugins/jQuery.filer/css/jquery.filer.css') }}" type="text/css" rel="stylesheet"/>
    <script src="{{ asset(app['dir.base'] ~ 'assets/plugins/jQuery-Chord-Transposer/jquery.transposer.js') }}"></script>
    <script src="{{ asset(app['dir.base'] ~ 'assets/plugins/jQuery.filer/js/jquery.filer.min.js') }}"></script>
    <script src="{{ asset(app['dir.base'] ~ 'assets/blog/js/file-uploader.js') }}" type="text/javascript"></script>
{% endblock %}

{% block headerNome %}{% if musica.numero %}{{ musica.numero }} - {% endif %}{{ musica.nome }}{% endblock %}
{% block headerSubtitulo %}{{ musica.categoria.colecao.nome }} / {{ musica.categoria.nome }}{{ app['nome.blog'] }}{% endblock %}

{% block content %}

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1 col-xs-12">
                    <div id="comentarios" data-source="{{ path('api_comentarios', { musicaId : musica.id }) }}"
                         data-source-arquivos="{{ path('api_anexos', { musicaId : musica.id }) }}"
                         data-user="{{ app['usuario'].roles }}" data-dir-avatar="{{ app['dir.avatar'] }}"
                         data-dir-anexos="{{ app['dir.anexo'] }}"
                         data-musica-id="{{ musica.id }}" data-source-editar="{{ path('view_editar_musica', { id : musica.id, nome : musica.nome }) }}"
                         data-source-add-letra="{{ path('view_editar_letra_musica', { id : musica.id }) }}"
                         data-source-musica="{{ path('api_musica', { id : musica.id }) }}"
                         data-source-videos="{{ path('videos') }}">
                    </div>
                    <script src="{{ asset(app['dir.base'] ~ 'assets/build/anexos.js') }}"></script>
                </div>
            </div>
        </div>
    </article>

    <div class="modal fade" id="addLink" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <form id="form-add-link" class="form-horizontal">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                    aria-hidden="true">&times;</span></button>
                        <h4 class="modal-title" id="myModalLabel">Adicionar Musica</h4>
                    </div>
                    <div class="modal-body">
                        <input type="hidden" name="id" id="id">
                        <input type="hidden" name="musica" id="musica" value="{{ musica.id }}">
                        <label>Tipo de Link</label>
                        <p class="control">
                            <select class="input" name="tipo" id="tipo" required>
                                <option value="">Selecione</option>
                                {% for tipo in tipos %}
                                    <option value="{{ tipo.id }}">{{ tipo.nome }}</option>
                                {% endfor %}
                            </select>
                        </p>
                        <label>Link</label>
                        <p class="control">
                            <input class="input" type="text" placeholder="Link" name="link" id="link" required>
                        </p>
                    </div>
                    <div class="modal-footer">
                        <p class="control">
                            <button id="btn-add-link" class="button is-success" type="submit">
                                Salvar
                            </button>
                        </p>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}