{% extends 'template-new.html.twig' %}

{% block title %}{{ musica.nome }} - Videos{% endblock %}

{% block header %}{{ parent() }}{% endblock %}

{% block headerNome %}{{ musica.nome }} - Videos{% endblock %}

{% block content %}

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    {% for video in videos %}
                        <div class="col-sm-12 col-xs-12">
                            <h4>
                                <a href="/user/praise/{{ musica.id }}-{{ musica.nome }}/video/{{ video.id }}">{{ video.nome }}</a>
                            </h4>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </article>


{% endblock %}