{% extends 'template-new.html.twig' %}

{% block title %}Sugestão{% endblock %}
{% block headerNome %}Sugestão{% endblock %}

{% block content %}

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <ul class="list-group">
                        {% for sugestao in sugestoes %}

                            <li class="list-group-item {% if sugestao.respondida %}list-group-item-success{% endif %}">
                                <a href="/user/{{ sugestao.usuario.id }}-{{ sugestao.usuario.nome|lower }}">{{ sugestao.usuario.nome }}</a>
                                <small>em {{ sugestao.enviadaEm|date('d/m/Y H:i:s') }}</small>
                                <p>{{ sugestao.mensagem }}</p>
                                <p><a href="/user/sugestao/responder?user={{ sugestao.usuario.id }}&sugestaoId={{ sugestao.id }}">Responder</a></p>
                            </li>

                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </article>

{% endblock %}