{% extends 'template-new.html.twig' %}

{% block title %}Home{% endblock %}

{% block header %}{{ parent() }}{% endblock %}

{% block headerNome %}Videos{% endblock %}

{% block content %}

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

                    {% for alert in app.session.flashbag.get('mensagem') %}
                        <span id="snackbarid" data-toggle="snackbar" data-content="{{ alert }}"></span>
                    {% endfor %}

                    {% for video in videos %}
                        <div class="col-lg-4 col-md-5">
                            <div class="card wow fadeInUp animated slide" data-wow-delay=".3s" style="height: 300px;">
                                <div class="card-image wow fadeInUp animated slide" data-wow-delay=".5s">
                                    {% if video.link is not null %}
                                            <iframe  width="100%" height="100%" src="https://www.youtube.com/embed/{{ video.link }}"
                                                    frameborder="0" allowfullscreen></iframe>
                                    {% else %}
                                        <figure class="image is-16by9">
                                            <img src="{{ asset(app['background.default']) }}" alt="">
                                        </figure>
                                    {% endif %}
                                </div>
                                <div class="card-content wow fadeInUp animated slide" data-wow-delay=".6s">
                                    <div class="content">
                                        <h4 class="media-heading">{{ video.nome }}</h4>
                                        <br>
                                    </div>
                                </div>
                            </div>
                            <br>
                         </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </article>

{% endblock %}