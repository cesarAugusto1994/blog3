{% extends 'template-new.html.twig' %}

{% block title %}Home{% endblock %}

{% block header %}{{ parent() }}{% endblock %}

{% block headerNome %}Videos{% endblock %}

{% block content %}

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    {% for alert in app.session.flashbag.get('mensagem') %}
                        <span id="snackbarid" data-toggle="snackbar" data-content="{{ alert }}"></span>
                    {% endfor %}
                    {% for video in videos %}
                        <div class="col-sm-4 col-xs-12">
                            <figure>
                                <div class="img-wrapper" style="width: 100%;">
                                    {% if video.link is not null %}
                                        <iframe  width="100%" height="100%" src="https://www.youtube.com/embed/{{ video.link }}"
                                                 frameborder="0" allowfullscreen></iframe>
                                    {% endif %}
                                </div>
                                <figcaption>
                                    <h4>
                                        {{ video.nome }}
                                    </h4>
                                </figcaption>
                            </figure>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </article>

{% endblock %}