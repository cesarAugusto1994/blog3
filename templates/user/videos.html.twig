{% extends 'template.html.twig' %}

{% block title %}Home{% endblock %}

{% block content %}

    <header class="intro-header" style="background-image: url('{% if app['config'].background is not null %}{{ asset(app['dir.img'] ~ app['config'].background ) }}{% else %}{{ asset(app['background.default']) }}{% endif %}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>Videos</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    {% for video in videos %}

                    <div class="col-lg-4 col-md-5">
                        <div class="card" style="height: 270px;">
                            <div class="card-image">
                                {% if video.link is not null %}
                                        <iframe width="100%" height="100%" src="https://www.youtube.com/embed/{{ video.link }}"
                                                frameborder="0" allowfullscreen></iframe>
                                {% else %}
                                    <figure class="image is-16by9">
                                        <img src="{{ asset(app['background.default']) }}" alt="">
                                    </figure>
                                {% endif %}
                            </div>
                            <div class="card-content">
                                <div class="content">
                                    <h4 class="media-heading">{{ video.nome }}</h4>
                                    <br>
                                </div>
                            </div>
                        </div>
                        <br>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </article>

{% endblock %}