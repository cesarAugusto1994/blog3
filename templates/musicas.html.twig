{% extends 'template.html.twig' %}

{% block title %}Musicas{% endblock %}

{% block content %}

    <header class="intro-header" style="background-image: url('{% if app['config'].background is not null %}{{ asset('assets/blog/img/config/' ~ app['config'].background ) }}{% else %}{{ asset(app['background.default']) }}{% endif %}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>Musicas</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    {% for musica in musicas %}
                        <div class="col-lg-6 col-md-6">
                            <div class="card" style="width: 100%">
                                <a style="text-decoration: none" href="{{ path('musica_anexos', { musicaId : musica.id }) }}">
                                    <!--<div class="card-image">
                                        <figure class="image is-4by3">
                                            <img src="{{ asset(app['background.post.default']) }}" alt="">
                                        </figure>
                                    </div>-->
                                    <div class="card-content">
                                        <div class="media">
                                            <div class="media-content">
                                                <p class="title is-5">{{ musica.numero }} - {{ musica.nome }}</p>
                                            </div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <br>
                        </div>
                    {% else %}
                        <p class="lead">Nenhum registro encontrado.</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </article>

{% endblock %}