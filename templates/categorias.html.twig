{% extends 'template.html.twig' %}

{% block title %}Categorias{% endblock %}

{% block content %}

    <header class="intro-header" style="background-image: url('{% if app['config'].background is not null %}{{ asset(app['dir.img'] ~ app['config'].background ) }}{% else %}{{ asset(app['background.default']) }}{% endif %}')">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                    <div class="post-heading">
                        <h1>Categorias</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <article>
        <div class="container">
            <div class="row">
                <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
                     <h3 class="lead">Cole&ccedil;&atilde;o: {{ colecao.nome }}</h3> <br>
                    {% for categoria in categorias %}
                        <div class="box">
                            <article class="media">
                                <div class="media-content">
                                    <div class="content">
                                        <p>
                                            <a style="text-decoration: none" href="{{ path('musicas', { categoriaId : categoria.id }) }}">
                                                <strong>{{ categoria.nome }}</strong> <small>{{ categoria.colecao.nome }}</small>
                                            </a>
                                            <br>
                                        </p>
                                    </div>
                                </div>
                            </article>
                        </div>
                    {% else %}
                        <p class="lead">Nenhum registro encontrado.</p>
                    {% endfor %}
                </div>
            </div>
        </div>
    </article>

{% endblock %}