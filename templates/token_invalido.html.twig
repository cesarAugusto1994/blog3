{% extends 'template-login-new.html.twig' %}

{% block title %}Redefinicao de Senha{% endblock %}

{% block header %}

    <section id="hero-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="block wow fadeInUp" data-wow-delay=".3s">
                        <section class="cd-intro">
                            <div class="login-box">

                                <div class="login-logo">
                                    <a href="/"><b>{{ app.blog.nome }}</b></a>
                                </div>

                                <div class="register-box-body">
                                    <div class="alert alert-danger alert-dismissable" role="alert">
                                        {{ mensagem }}
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-6">
                                        <a href="/" class="button is-light is-fullwidth">Inicio</a>
                                    </div>
                                    <div class="col-xs-6">
                                        <a href="/i-forgot-my-password" class="button is-primary is-inverted is-fullwidth">Esqueci
                                            minha senha</a>
                                    </div>
                                </div>

                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
