{% extends 'template-login-new.html.twig' %}

{% block title %}Redefinicao de Senha{% endblock %}

{% block header %}

    <section id="hero-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12 text-center">
                    <div class="block wow fadeInUp" data-wow-delay=".3s">
                        <section class="cd-intro">

                            <article class="message is-danger">
                                <div class="message-header">
                                    <p><strong>Ocorreu um erro</strong>!</p>
                                </div>
                                <div class="message-body">
                                    {{ mensagem }}
                                </div>
                            </article>

                            <div class="login-box">

                                <div class="login-logo">
                                    <a href="/"><b>{{ app.blog.nome }}</b></a>
                                </div>

                                <div class="row">
                                    <div class="col-xs-6">
                                        <a href="/" class="button is-primary is-fullwidth">Ir para o Inicio</a>
                                    </div>
                                    <div class="col-xs-6">
                                        <a href="/i-forgot-my-password" class="button is-danger is-fullwidth">Esqueci
                                            minha senha</a>
                                    </div>
                                </div>

                            </div>
                        </section>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
